<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/mmm">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_weight="3">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pr"
            android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/car"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/car"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/setting"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/call"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/lg"
        android:layout_margin="5dp"/>
</LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:layout_weight="2">


        <github.hellocsl.cursorwheel.CursorWheelLayout
            android:id="@+id/wheelImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:scaleType="center"
            app:wheelBackgroundColor="#000000"
            app:wheelCursorColor="#000000"
            app:wheelCursorHeight="20dp"
            app:wheelItemRotateMode="none"
            app:wheelSelectedAngle="270">


        </github.hellocsl.cursorwheel.CursorWheelLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/cur" />

    </RelativeLayout>

</LinearLayout>